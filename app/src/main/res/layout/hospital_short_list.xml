<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:padding="16dp"
    android:elevation="8dp"
    android:background="@drawable/card_bg">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/hosName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Popular Diagnostic Center"
                android:textSize="18sp"
                android:textColor="@color/myPrimary"
                android:textStyle="bold"
                android:padding="4dp"
                />


            <TextView
                android:id="@+id/hosAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dhaka, Mirpur"
                android:textSize="16sp"
                android:textColor="@color/myPrimary"
                android:textStyle="bold"
                android:padding="4dp"
                />

            <TextView
                android:id="@+id/hosPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="+3215482457"
                android:textColor="@color/myPrimary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/directionLayout"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="4dp"
                android:background="@drawable/item_bg">

                <TextView
                    android:id="@+id/tvDirection"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Direction"
                    android:textSize="16sp"
                    android:textColor="@color/myPrimary"
                    android:textStyle="bold"
                    android:padding="4dp"
                    />
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/directionLogo"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_directions_black_24dp"
                    app:civ_border_width="3dp"
                    app:civ_border_color="#303F9F"/>

            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>